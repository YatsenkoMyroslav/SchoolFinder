@inherits FinderComponent

<div class="row">
    <div class="col-6">
        <FormTextInput @bind-Value=@RegistrationForm.UserFirstName FieldDescription="Ім`я" Width="80%" />
        <FormTextInput @bind-Value=@RegistrationForm.UserLastName FieldDescription="Прізвище" Width="80%" />
        <FormTextInput @bind-Value=@RegistrationForm.SchoolName FieldDescription="Школа, де ви навчаєтесь" Width="80%" />
        <FormTextInput @bind-Value=@RegistrationForm.UserEmail FieldDescription="Електронна пошта" Width="80%" />
        <FormPasswordInput @bind-Value=@RegistrationForm.UserPassWord FieldDescription="Пароль" Width="80%" />
        <FormPasswordInput @bind-Value=@ApprovedPassword FieldDescription="Повторіть пароль" Width="80%" />
    </div>
    <div class="col-6">
        <div>
            <RadzenText class="ms-2">Додайте фото учнівського квитка</RadzenText>
            <RadzenFileInput @bind-Value=@(RegistrationForm.DocumentApprove.Data) @bind-FileName=@(RegistrationForm.DocumentApprove.Name)
                             ChooseText="Обрати фото" class="fileUpload w-100" TValue="byte[]" />
        </div>
        <div class="mt-3 row justify-content-around">
            <RadzenButton class="col-5 bg-danger" Click=@ClearForm>Очистити форму</RadzenButton>
            <RadzenButton class="col-5 bg-primary" Click=@AddRequest>Подати заявку</RadzenButton>
        </div>
    </div>
</div>
